{
  "$schema": "./_Infrastructure/autoversion.schema.json",
  "versionFile": "Directory.Build.props",

  "files": [
    {
      "path": "Directory.Build.props",
      "type": "xml",
      "xpath": "/Project/PropertyGroup/Version",
      "encoding": "utf-8"
    },
    {
      "path": "src/AutoVersion.Core/Properties/AssemblyInfo.cs",
      "type": "regex",
      "pattern": "AssemblyVersion\\(\"(.*?)\"\\)",
      "encoding": "utf-8"
    },
    {
      "path": "src/AutoVersion.Cli/Properties/launchSettings.json",
      "type": "json",
      "key": "version",
      "encoding": "utf-8"
    },
    {
      "path": "README.md",
      "type": "text",
      "token": "__VERSION__",
      "encoding": "utf-8"
    }
  ],

  "artifacts": [
    {
      "path": "Builds/AutoVersionLite.unitypackage",
      "rename": "Builds/AutoVersionLite_{version}.unitypackage",
      "overwrite": true
    },
    {
      "path": "Builds/autoversion.exe",
      "rename": "Builds/autoversion_v{version}.exe",
      "overwrite": true
    }
  ],

  "git": {
    "tagPrefix": "v",
    "push": true,
    "allowDirty": false,
    "commitMessage": "chore(release): bump version to {version}"
  },

  "changelog": {
    "path": "CHANGELOG.md",
    "template": "## [{version}] â€“ {date}\n### Added\n- ...\n",
    "sections": {
      "feat": "Added",
      "fix": "Fixed",
      "perf": "Performance",
      "docs": "Documentation",
      "refactor": "Changed",
      "chore": "Maintenance"
    }
  },

  "logging": {
    "verbose": true,
    "color": true,
    "level": "info"
  },

  "dryRun": false
}
